@model LMS.Models.HeaderViewModel
<header id="lmsheader">
    <div class="container body-content" style="height:50px;">
        <div class="row">
            <div class="col-sm-4">
                <span style="color:#ff6a00 ;font-weight:bold">Course: </span>@Model.CourseName
            </div>
            <div class="col-sm-8">
                <span style="color:#ff6a00 ;font-weight:bold">Description: </span>@Model.Description
</div>
        </div>
        <div class="row">
            <div class="col-sm-4">
                <span style="color:#ff6a00 ;font-weight:bold">Start Date: </span>@Html.DisplayFor(model => model.StartDate) 
            </div>

            <div class="col-sm-4">
          
                <span style="color:#ff6a00 ;font-weight:bold">End Date: </span>@Html.DisplayFor(model => model.EndDate) 
                
            </div>
            <div class="col-sm-4">
                @{ if (User.IsInRole("Teacher"))
                    {
                        @Html.ActionLink("Edit Course", "Edit", "CourseDetails", new { @class = "btn btn-success  btn-medium", id = Model.CourseId }, null)
                    }
                }
            </div>
        </div>
    </div>

</header>
