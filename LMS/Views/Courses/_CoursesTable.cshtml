@model IEnumerable<LMS.Models.Course>

<div id="coursestable">
    <table class="table table-bordered ">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StartDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EndDate)
                </th>
                <th></th>
            </tr>
        </thead>

        @{var itemCount = 0;}
        @foreach (var course in Model)
        {
            var dataTarget = "course" + itemCount;
            itemCount++;
            var backgroundColor = (itemCount % 2 == 0) ? "white" : "#F2F2F2";
            <tbody>
                <tr class="clickable" data-toggle="collapse" data-target="#@dataTarget" 
                    aria-expanded="false" aria-controls="@dataTarget" style="background-color:@backgroundColor">
                    <td>
                        @Html.DisplayFor(modelItem => course.Name)

                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => course.StartDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => course.EndDate)
                    </td>
                    <td>
                        @if (User.IsInRole("Teacher"))
                        {
                            @Html.ActionLink("Edit/Details", "Edit", new { id = course.Id }) <span>| </span>
                        }
                        @Html.ActionLink("Delete", "Delete", new { id = course.Id })
                    </td>
                </tr>
            </tbody>
            <tbody id="@dataTarget" class="collapse" style="background-color:aliceblue">
                    @Html.Partial("_ModulesTable", course.Modules)
                    @*<tr >
                        <td>@module.Name</td>
                        <td>@module.StartDate</td>
                        <td>@module.EndDate</td>
                        <td>data 1</td>
                    </tr>*@
            </tbody>
        }
    </table>
</div>