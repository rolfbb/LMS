    </tr>
    @{var studentlist1 = studentlist.Where(w => w.UserId == User.Identity.GetUserId()).ToList(); }

    @if (User.IsInRole("Student"))
    {
        foreach (var item in studentlist1)
        {
            <tr>
                <td>
                    @item.Activity.Name
                </td>
                <td>
                    @Html.ActionLink(item.Name, "DownLoadFile", "Documents", new { id = item.Id }, null)
                </td>
                <td>
                    @item.Description
