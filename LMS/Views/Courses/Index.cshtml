@model LMS.Models.CoursesViewModel
@using LMS.Models
@{
	ViewBag.Title = "Index";
}

@Html.Partial("_Header", Model.Header)
<div class="container body-content">
    @using (Ajax.BeginForm(
        new AjaxOptions
        {
            HttpMethod = "post",
            InsertionMode = InsertionMode.Replace,
            UpdateTargetId = "coursestable"
        }))
    {
        <label for="Test"></label>
        <div class="row">
            <div class="col-sm-4">
                <h2>Show Active Courses</h2>
            </div>
            <div class="col-sm-4">
                <h2>Course Name</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-4">
                <label class="switch">
                    <input type="checkbox" checked name="active">
                    <span class="slider round"></span>
                </label>
            </div>
            <div class="col-sm-4">
                <input type="search" , value="enter name", name="name" ,id="name" />
            </div>
            <div class="col-sm-4">
                <input type="submit" , value="Filter" />
            </div>
        </div>
    }

    <div class="row">
        <div class="col-sm-10">
            Courses
        </div>
		<div class="col-sm-2">
			@Html.ActionLink("Add Course", "Create", null, new { @class = "btn btn-success btn-large" })
		</div>
    </div>


    @Html.Partial("_TableView", Model.Courses)
</div>
