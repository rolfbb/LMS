@model IEnumerable<LMS.Models.ApplicationUser>

@{
	ViewBag.Title = "UserListAction";
}

<h2>User List</h2>
@using (Html.BeginForm("Search", "Account", FormMethod.Post))
{
	@Html.AntiForgeryToken()

	<div class="form-horizontal">
		<dl class="dl-horizontal">
			<dt>
				Search by:
			</dt>
			<dd>
				<form>
					<div>
						@*<label class="radio"><input type="radio" name="filter" value="Reg">gfgfg</label>
							<label class="radio"><input type="radio" name="filter" value="Brand">fgfgfg</label>
							<label class="radio"><input type="radio" name="filter" value="Type">fgfgf</label>*@
						@Html.RadioButton("filter", "Teacher") <span>Teacher</span>
						@Html.RadioButton("filter", "Student") <span>Student</span>

					</div>
				</form>
			</dd>
			<dd>
				<input type="text" name="Search"> <input type="submit" value="Search" class="btn btn-info" />
			</dd>
			@ViewBag.output
		</dl>
	</div>

}

@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
}

@*<p>
		@Html.ActionLink("Create New", "Create")
	</p>*@
<table class="table">
	<tr>

		<th>
			@Html.DisplayNameFor(model => model.Name)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Course.Name)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Email)
		</th>
		<th></th>
	</tr>

	@foreach (var item in Model)
	{
	<tr>

		<td>
			@Html.DisplayFor(modelItem => item.Name)
		</td>
		<td>
			@Html.DisplayFor(modelItem => item.Course.Name)
		</td>
		<td>
			@Html.DisplayFor(modelItem => item.Email)
		</td>

		<td>
			@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
			@Html.ActionLink("Details", "Details", new { id = item.Id }) |
			@Html.ActionLink("Delete", "Delete", new { id = item.Id })
		</td>
	</tr>
	}

</table>
