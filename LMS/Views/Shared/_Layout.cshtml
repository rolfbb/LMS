@using Microsoft.AspNet.Identity
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/lsm")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="#">
            <img src="~/Content/Images/logo-lexicon-small.gif" alt="Logo" style="width:80px;">
        </a>

        <div class="collapse navbar-collapse" id="navbarText">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <span class="navbar-text text-info text-light" id="coursename" style="display:none">
                        CourseName
                    </span>
                </li>
                <li class="nav-item active">
                    <span class="navbar-text text-info text-light" id="username" style="display:none">
                        User
                    </span>
                </li>
                @if (Request.IsAuthenticated)
                {
                    <li>
                        @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
                    </li>
                }
            </ul>
        </div>
    </nav>

    <div class="row">
        <div class="col-md-1" id="sidepanel">
            <div class="row teacher" id="courses" style="display:none">
                <div class="col-md-12">
                    @Html.ActionLink("Courses", "Index", "Courses", routeValues: null, htmlAttributes: new { id = "registerLink" })
                </div>
            </div>
            <div class="row teacher" id="addcourse" style="display:none">
                <div class="col-md-12">
                    @Html.ActionLink("Add New Course", "Add", "Courses", routeValues: null, htmlAttributes: new { id = "registerLink" })
                </div>
            </div>
            <div class="row">
                <div class="col-md-12" id="logout">
                    @if (Request.IsAuthenticated)
                    {
                        using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
                        {
                            @Html.AntiForgeryToken()
                            <a href="javascript:document.getElementById('logoutForm').submit()">Log off</a>
                        }
                    }
                    else
                    {
                        <span>Req Not Authenticated</span>
                    }
                </div>
            </div>

        </div>
        <div class="col-sm-11">
            @RenderBody()
        </div>
        @*<div class="container body-content">
                <hr />
                <footer>
                    <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
                </footer>
            </div>*@
    </div>

    @RenderSection("scripts", required: false)
</body>
</html>
