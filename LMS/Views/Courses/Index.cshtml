@model IEnumerable<LMS.Models.Course>
@using LMS.Models
@{
	ViewBag.Title = "Index";
}

@Html.Partial("_Header", new HeaderViewModel() {
    CourseName = "NG18 - .Net Påbyggnadsutbildning",
    Description = "Välkommen till kursportalen för klass NG18 Här hittar ni under utbildningens gång scheman, material och uppgiftningsbeskrivningar.",
    StartDate = DateTime.Now
})

<div class="container body-content">
    <div class="row">
        <div class="col-sm-10">
            Courses
        </div>
		<div class="col-sm-2">
			@Html.ActionLink("Add Course", "Create", null, new { @class = "btn btn-success btn-large" })
		</div>
    </div>

    <table class="table table-bordered table-striped">
        <thead class="">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StartDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EndDate)
                </th>
                <th></th>
            </tr>
        </thead>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDate)
                </td>
                <td>
                    @if (User.IsInRole("Teacher"))
                    {
                        @Html.ActionLink("Edit/Details", "Edit", new { id = item.Id }) <span>| </span>
                    }
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </table>
</div>