@model LMS.Models.Module
@{
    ViewBag.Title = "_Delete";
}

<h3>Are you sure you want to delete the module @Html.DisplayFor(model => model.Name) ?</h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-actions no-color">
        <input type="submit" value="Delete" class="btn btn-default" /> |
        @Html.ActionLink("Back to List", "Index", "CourseDetails", new { id = Model.CourseId }, null)
    </div>
}