@model LMS.Models.CoursesViewModel
@using LMS.Models

@{ViewBag.Title = "Courses"; }

<script>
    $(document).ready(function () {
        $("input:radio").click(function () {
            active = $("input:radio:first").prop("checked");
            if (active) {
                $(".inactivecourse").hide();
            }
            else {
                $(".inactivecourse").show();
            }
        });

        $('#coursestable tr').click(function () {             
            var href = $(this).find('a').attr("data-href");           
            if (href) {
                window.location = href;                
            }
        });
    });
</script>


